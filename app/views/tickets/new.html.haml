= form_with scope: :ticket, url: tickets_path, local: true do |form|
  - if @ticket.errors.any?
    #error_explanation
      %h2
        = pluralize(@ticket.errors.count, "error")
        prohibited
        this ticket from being saved:
      %ul
        - @ticket.errors.full_messages.each do |msg|
          %li= msg
  %p
    = form.label :title
    %br/
    = form.text_field :title, :maxlength=>"75"
  %p
    = form.label :author
    %br/
    = form.text_field :author, :maxlength=>"75"
  %p
    = form.label :type_of_ticket
    %br/
    = select_tag(:type_of_ticket, options_for_select(type_of_ticket_options, :repaire ))
  %p
    = form.label :responsible_unit
    %br/
    = select_tag(:responsible_unit, options_for_select(responsible_unit_options, :repaire ))
  %p
  .form-group
    = form.label :detailed_description
    %br/
    = form.text_area :detailed_description, size: "75x10", class: "form-control"
  %p
    = form.label :deadline
    %br/
    = form.date_field :deadline
  %p
    = form.label :attachment
    %br/
    = form.file_field :avatar
  %p
    = form.submit
= link_to 'Back', tickets_path
